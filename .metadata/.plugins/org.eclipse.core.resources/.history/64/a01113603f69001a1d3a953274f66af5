	@Test
	public void getPetId_GET() {
		
		RestAssured.baseURI= "http://petstore.swagger.io/#/";
	
		given().param("petId", "7070").
		when().
			get("/v2/swagger.json").
		then().
			assertThat().
			statusCode(200).and().
